@model IEnumerable<Tatil.MvcWebUI.Models.UserOrderModel>
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Randevu Bilgileriniz</h2>
            <hr/>

            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Randevu Numarası</th>
                        <th>İşlem Tarihi</th>
                        <th>Tutar</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                      <tr>
                        <td>@item.OrderNumber</td>
                        <td>@item.OrderDate.ToShortDateString()</td>
                        <td>@item.Total</td>
                          <td>@Html.ActionLink("Details","Details",new { id = item.Id },new { @class = "btn btn-primary" })</td>
                      </tr>
                    }

                </tbody>
            </table>
            </div>
</div>
</div>