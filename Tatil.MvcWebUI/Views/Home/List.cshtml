@using Tatil.MvcWebUI.Models;
@model IEnumerable<ProductModel>
@{
    ViewBag.Title = "List";
}
<div class="container">
    <div class="row">
        <div class="col-md-3">
            @Html.Action("GetCategories", "Home")
        </div>
        <div class="col-md-9">
            @if (Model.Count() == 0)
            {
                <div class="alert alert-warning" role="alert">
                    <i class="fa fa-exclamation-triangle" aria-hidden="true"></i>
                    Böyle bir tur bulunamadı.
                </div>
            }
            else
            {
                <div class="row">
                    <div class="col-md-3">
                        <div class="alert alert-warning" role="alert">
                            <i class="fa fa-check-circle-o" aria-hidden="true"></i>
                            @Model.Count() adet tur bulundu
                        </div>
                    </div>
                </div>
            }
           
                
                    @Html.Partial("_ProductList", Model)
                
            
        </div>
    </div>
</div>
